<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="70dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/profile_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/image_guest_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="석호필"
        android:textSize="12dp"
        android:textColor="@color/create_detail_title_color"
        android:id="@+id/tv_guest_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_guest_profile"
        android:layout_toEndOf="@+id/image_guest_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01088888888"
        android:textSize="12dp"
        android:textColor="@color/comment_text_color"
        android:id="@+id/tv_guest_phone"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/tv_guest_name"
        android:layout_toRightOf="@+id/tv_guest_name"
        android:layout_toEndOf="@+id/tv_guest_name" />

</RelativeLayout>