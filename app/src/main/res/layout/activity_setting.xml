<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="kr.werac.yeah.SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/aab">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:homeAsUpIndicator="@drawable/back"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/create_detail_title_color"
                android:text="@string/setting"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Switch
        android:layout_below="@+id/aab"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:text="푸쉬 알림"
        android:id="@+id/switch_push"
        android:background="@android:color/white"
        android:textSize="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/create_detail_title_color"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="관심있는 모임 상태 변경, 진행자 신청시 개설자 알림"
        android:textSize="10dp"
        android:textColor="@color/comment_text_color"
        android:id="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/text_helpdesk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Help Desk"
        android:id="@+id/text_helpdesk"
        android:background="@android:color/white"
        android:textColor="@color/create_detail_title_color"
        android:textSize="15dp"
        android:layout_below="@+id/switch_push"
        android:padding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="개인 정보 취급 방침"
        android:id="@+id/text_rule_for_privacy"
        android:layout_below="@+id/text_helpdesk"
        android:background="@android:color/white"
        android:textColor="@color/create_detail_title_color"
        android:textSize="15dp"
        android:padding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="이용약관"
        android:id="@+id/text_rule_for_using"
        android:textSize="15dp"
        android:layout_below="@+id/text_rule_for_privacy"
        android:background="@android:color/white"
        android:textColor="@color/create_detail_title_color"
        android:padding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="로그아웃"
        android:id="@+id/text_logout"
        android:background="@android:color/white"
        android:textColor="@color/logout_in_setting"
        android:textSize="15dp"
        android:layout_below="@+id/text_rule_for_using"
        android:padding="16dp"/>


</RelativeLayout>
